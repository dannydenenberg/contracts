<div class="main text-center">
<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "form-signin"}) do |f| %>
  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, placeholder: "joe@gmail.com", autofocus: true, autocomplete: "email", id: "inputEmail", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, placeholder: "password1234...", autocomplete: "current-password", id: "inputPassword", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
